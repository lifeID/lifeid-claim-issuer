{
  "name": "lifeid-claim-issuer",
  "version": "1.0.0",
  "description": "The issuer of champions.",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "build":
      "yarn run clean && yarn run swagger-gen && yarn run routes-gen && tsc",
    "dev":
      "nodemon -e ts --ignore 'routes.ts' --watch './src/' --exec \"yarn run build && yarn run start\"",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "test": "BLUEBIRD_LONG_STACK_TRACES=1 mocha  './test/**/*.test.ts'",
    "test-watch":
      "BLUEBIRD_LONG_STACK_TRACES=1 mocha --watch  'test/**/*.test.ts'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4",
    "prettier": "1.11.1",
    "sinon": "^5.0.10",
    "timekeeper": "^2.1.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1",
    "typings": "^2.1.1",
    "proxyquire": "^2.0.1",
    "sinon-chai": "^3.1.0"
  },
  "dependencies": {
    "@types/ramda": "^0.25.28",
    "api-error-handler": "^1.0.0",
    "babel-register": "^6.26.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "email-validator": "^2.0.3",
    "express": "^4.16.3",
    "ioredis": "^3.2.2",
    "left-pad": "^1.3.0",
    "method-override": "^2.3.10",
    "mndid": "^1.0.7",
    "ncp": "^2.0.0",
    "ramda": "^0.25.0",
    "swagger-ui-express": "^3.0.8",
    "tsoa": "^2.1.4",
    "web3": "^1.0.0-beta.34"
  }
}
