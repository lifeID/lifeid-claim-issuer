{
  "name": "lifeid-claim-issuer",
  "version": "1.0.0",
  "description": "The issuer of champions.",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "build":
      "yarn run clean && yarn run swagger-gen && yarn run routes-gen && tsc",
    "dev":
      "nodemon -e ts --ignore 'routes.ts' --watch './src/' --exec \"yarn run build && yarn run start\"",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "test": "mocha --reporter spec -r ts-node/register test/**/**.ts",
    "test-watch":
      "mocha --watch --reporter spec  -r ts-node/register test/**/**.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^5.0.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.4",
    "prettier": "1.11.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1",
    "typings": "^2.1.1"
  },
  "dependencies": {
    "@types/ramda": "^0.25.28",
    "api-error-handler": "^1.0.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "method-override": "^2.3.10",
    "mndid": "https://github.com/lifeID/mndid.git",
    "ncp": "^2.0.0",
    "simple-base": "^0.2.0",
    "swagger-ui-express": "^3.0.8",
    "tsoa": "^2.1.4",
    "web3": "^1.0.0-beta.34"
  }
}
